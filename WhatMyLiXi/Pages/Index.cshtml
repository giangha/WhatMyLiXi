        "Images/500.png",
        "Images/8.png",
        ]

        var url = window.location.href;

        if(url.includes('sources')){


            var sources = url.substr(url.indexOf('=') +1);

            selectMonies = sources.split(',');

            if(selectMonies.length == 5){

                var selection = [];

                for(var i =0;i<monies.length;i++){
                    var amount = monies[i].match(/\d+/)[0];

                    if(selectMonies.includes(amount)){
                        selection.push(monies[i]);
                    }
                }

                if(selection.length == 5){
                    monies = selection;
                }
            }
        }

        shuffle(monies);

        for(var i =0; i < 5;i++){
            var img = document.createElement("img");

            img.src = monies[i];

            var moneyId = 'money' + (i+1);

            var block = document.getElementById(moneyId);
            block.appendChild(img);
        }


    function attachFlipEvent(card) {
        card.addEventListener('click', function(){
             card.classList.toggle('is-flipped');
            
        })}

    function shuffle(array) {
      let currentIndex = array.length,  randomIndex;

      // While there remain elements to shuffle...
      while (currentIndex != 0) {

        // Pick a remaining element...
        randomIndex = Math.floor(Math.random() * currentIndex);
        currentIndex--;

        // And swap it with the current element.
        [array[currentIndex], array[randomIndex]] = [
          array[randomIndex], array[currentIndex]];
      }

      return array;
    }

